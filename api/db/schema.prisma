model Resource {
  id           String               @id @default(cuid())
  name         String               @unique
  parent       Resource?            @relation("ResourceParent", fields: [parentId], references: [id])
  parentId     String?
  children     Resource[]           @relation("ResourceParent")
  capabilities ResourceCapability[]
  kind         ResourceKind         @relation(fields: [kindId], references: [id])
  kindId       String
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
}

model ResourceKind {
  id         String     @id @default(cuid())
  name       String     @unique
  hourlyCost Float
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  Resources  Resource[]
}

model ResourceCapability {
  id        String     @id @default(cuid())
  name      String     @unique
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  resources Resource[]
}
